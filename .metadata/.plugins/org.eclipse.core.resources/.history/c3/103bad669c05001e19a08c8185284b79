package com.exercise.exer;

import java.time.LocalDateTime;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;

import com.exercise.exer.question.Question;
import com.exercise.exer.question.QuestionRepository;

@SpringBootTest
class ExerciseApplicationTests {

	//@Autowired 애너테이션은 스프링의 DI 기능으로 questionRepository 객체를 스프링이 자동으로 생성
	@Autowired
	private QuestionRepository questionRepository;

	@Test
	void testJpa() {
		// Question.java에서 한 게터, 세터 이용
		Question q1 = new Question();
		q1.setSubject("sbb란 무엇인가요?");
		q1.setContent("sbb에 대해서 알고 싶습니다.");
		q1.setCreateDate(LocalDateTime.now());
		//첫번째 질문 저장
		this.questionRepository.save(q1); //this는 questionRepository가르킴
		

        Question q2 = new Question();
        q2.setSubject("스프링부트 모델 질문입니다.");
        q2.setContent("id는 자동으로 생성되나요?");
        q2.setCreateDate(LocalDateTime.now());
        this.questionRepository.save(q2);  // 두번째 질문 저장

	}

}
